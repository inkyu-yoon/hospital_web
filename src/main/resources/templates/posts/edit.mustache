{{>layouts/header}}
{{#post}}
    <form class = "container" form action="/posts/{{id}}/update" method = "post">
        <input type = "hidden" name ="id" value="{{id}}"/>
        {{#user}}
        <input type = "hidden" name ="userAccount" value="{{userAccount}}"/>
        {{/user}}
        <div class="mb-3">
            <label class="form-label">password</label>
            <input type="text" name="password" class="form-control" placeholder="비밀번호">
        </div>
        <div class="mb-3">
            <label  class="form-label">게시글 제목</label>
            <input type="text" name = "title" class="form-control" value = {{title}} placeholder="제목">
        </div>

        <div class="mb-3">
            <label  class="form-label">게시글 내용</label>
            <textarea class="form-control"  rows="10" name= "content" placeholder="내용" >{{content}}</textarea>

        </div>

        <div class="d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-primary" type="submit">수정</button>
        </div>

    </form>
    <a href="/posts"> 목록 </a>
{{/post}}

